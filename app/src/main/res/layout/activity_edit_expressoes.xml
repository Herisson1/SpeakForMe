<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    tools:context=".Activity.EdicaoExpressao">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_wallpaper">


    <Spinner
        android:id="@+id/spinnerCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtExpressao"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Idioma" />


    <Spinner
        android:id="@+id/spinnerExpressao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtAtualizarExpressao"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Expressão" />

    <Button
        android:id="@+id/btAlterarExpressao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="145dp"
        android:text="Alterar" />

    <Button
        android:id="@+id/btExcluirExpressao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btAlterarExpressao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-145dp"
        android:text="Excluir" />

    <TextView
        android:id="@+id/txtIdioma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinnerIdiomas"
        android:layout_alignParentStart="true"
        android:text="Idioma"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtExpressao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinnerExpressao"
        android:layout_alignParentStart="true"
        android:text="Expressão"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtAtualizarExpressao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btAlterarExpressao"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Novo Valor"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:fontFamily="cursive"
        android:text="Edição de Expressões"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerIdiomas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtCategoria"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Categoria" />

    <TextView
        android:id="@+id/txtCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinnerCategoria"
        android:layout_alignParentStart="true"
        android:text="Categoria"
        android:textSize="14dp"
        android:textStyle="bold" />
</RelativeLayout>

    <android.support.design.widget.NavigationView
    app:headerLayout="@layout/header"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:itemTextColor="@android:color/darker_gray"
    app:menu="@menu/drawermenu"
    android:layout_gravity="start"
    >

</android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
