<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    tools:context=".Activity.EdicaoIdiomas">


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_wallpaper">


    <Button
        android:id="@+id/btAlterarIdioma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btExcluirIdioma"
        android:layout_alignParentStart="true"
        android:text="Alterar" />

    <Button
        android:id="@+id/btExcluirIdioma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="67dp"
        android:text="Excluir" />

    <EditText
        android:id="@+id/txtAtualizarIdioma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Novo Valor"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spinnerIdiomas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtAtualizarIdioma"
        android:layout_alignParentStart="true"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/tvIdioma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinnerIdiomas"
        android:layout_alignParentStart="true"
        android:text="Idioma"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEdicaoIdiomas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:fontFamily="cursive"
        android:text="Edição de Ediomas"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:textStyle="bold" />

</RelativeLayout>


<android.support.design.widget.NavigationView
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:itemTextColor="@android:color/darker_gray"
        app:menu="@menu/drawermenu"
        android:layout_gravity="start"
>

</android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
